@inherits Umbraco.Web.Mvc.UmbracoViewPage
@{ 
    var homePage = Model.AncestorOrSelf<Home>();
}


<nav id="nav-styles" class="navbar navbar-expand-md navbar-dark">
    <div class="container">
        <a class="navbar-brand" href="#">Stechford Allotments</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">

                @foreach (var page in homePage.Children)
                {
                    var urlQuery = "";
<!--                    if (page.Name.Value.Contains("info"))
                    {
                        urlQuery = "type=small";
                    }-->
                    <li class="navbar-link nav-item m-1">
                        <a class="nav-link rounded" href="@page.Url@urlQuery">@page.Name</a>
                    </li>
                }             
            </ul>
        </div>
    </div>
</nav>
